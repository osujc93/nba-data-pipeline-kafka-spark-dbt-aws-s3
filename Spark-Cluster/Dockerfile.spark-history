FROM spark-base:latest

USER root

COPY /Spark-Cluster/defaults/history/spark-defaults.conf /opt/spark/conf/spark-defaults.conf

COPY /Spark-Cluster/defaults/logging/log4j.properties /opt/spark/conf/log4j.properties
COPY /Spark-Cluster/defaults/logging/log4j.properties /org/apache/spark/log4j2-defaults.properties

COPY /Spark-Cluster/env/history/spark-env.sh /opt/spark/conf/spark-env.sh
RUN chmod +x /opt/spark/conf/spark-env.sh

COPY /Spark-Cluster/entrypoints/history/entrypoint.sh /opt/entrypoint.sh
RUN chmod +x /opt/entrypoint.sh

RUN mkdir -p /opt/spark/logs && chown -R sparkuser:sparkuser /opt/spark/logs

USER sparkuser

CMD ["history"]

ENTRYPOINT ["/usr/bin/tini", "--", "/opt/entrypoint.sh"]
